<% content_for :head do %>
  <meta name="turbolinks-cache-control" content="no-cache">
<% end %>

<p id="notice"><%= notice %></p>
<div class="container">
  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <% @employees.each do |employee| %>
          <div class="row">
            <div class="col-md-6">

              <div class="float-right">
                <h1 class="blue-text"><%= employee.name %></h1>
                <h2><%= employee.position %></h2>
                <h2><%= employee.start_date %></h2>
                <h2 class="grey-text">Last updated</h2>
              </div>

              <div class="float-left">

                  <h5>Personal development plan:</h5>
                  <p><%= employee.personal_development_plan %></p>

                  <h5>Life quote:</h5>
                  <p><%= employee.life_quote %></p>

                  <h5>Quote:</h5>
                  <p><%= employee.quote %></p>

                  <h5>Motto:</h5>
                  <p><%= employee.motto %></p>

              </div>

            </div>
            <div class="col-md-6" id="right-side">
              <div id="right-side-text">
                <h5>Strength:</h5>
                <p><%= employee.strength %></p>

                <h5>Myers briggs:</h5>
                <p><%= employee.myers_briggs %></p>

                <h5>Birkman:</h5>
                <p><%= employee.birkman %></p>

                <h5>Vision:</h5>
                <p><%= employee.vision %></p>

                <h5>Short term goal:</h5>
                <p><%= employee.short_term_goal %></p>

                <h5>Long term goal:</h5>
                <p><%= employee.long_term_goal %></p>

                <h5>Area to develop:</h5>
                <p><%= employee.area_to_develop %></p>

                <h5>Objective setting:</h5>
                <p><%= employee.objective_setting %></p>

                <h5>Personal goal:</h5>
                <p><%= employee.personal_goal %></p>


              </div>
            </div>
          </div>
          <% end %>
        </div>
        <%= link_to 'Next', :class => 'carousel-control-prev' do %>

        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </div>


<%= link_to 'New Employee', new_employee_path %>
