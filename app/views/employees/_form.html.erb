<%= form_with(model: employee, local: true) do |form| %>
  <% if employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
      <% employee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="container form-container">
  <div class="field form-group">
    <%= form.label :name %>
    <%= form.text_field  :name, id: :employee_name,  class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :position %>
    <%= form.text_field  :position, id: :employee_position,  class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :start_date %>
    <%= form.text_field  :start_date, id: :employee_start_date,  class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :personal_development_plan %>
    <%= form.text_area  :personal_development_plan, id: :employee_personal_development_plan,  class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :life_quote %>
    <%= form.text_field  :life_quote, id: :employee_life_quote,  class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :quote %>
    <%= form.text_field  :quote, id: :employee_quote,  class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :motto %>
    <%= form.text_field  :motto, id: :employee_motto,  class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :strength %>
