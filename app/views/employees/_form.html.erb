    <%= form.text_area  :birkman, id: :employee_birkman,  class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :mission %>
    <%= form.text_area  :mission, id: :employee_mission,  class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :vision %>
    <%= form.text_field  :vision, id: :employee_vision,  class: "form-control" %>
